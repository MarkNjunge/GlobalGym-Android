<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CustomCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgInstructorPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvInstructorPhone"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvInstructorName" />

    <TextView
        android:id="@+id/tvInstructorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:alpha=".87"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/imgInstructorPhoto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Joseph Henderson" />

    <TextView
        android:id="@+id/tvInstructorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/imgInstructorPhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvInstructorName"
        tools:text="joseph.henderson@mail.com" />

    <TextView
        android:id="@+id/tvInstructorPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgInstructorPhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvInstructorEmail"
        tools:text="0712345768" />
</android.support.constraint.ConstraintLayout>